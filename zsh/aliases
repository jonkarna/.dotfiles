# utils
alias cdd='cd ~/Desktop'
alias l='ls -lh'
alias lr='ls -lrth'
alias ll='ls -lh | more'
alias lll='ls -alh'
alias vi='vim'
alias -g G='| grep'
alias -g A='| ack'

# prompt
# PS1="[\t \w]"
# PS1="\e[0;34m[\e[0;31m\t \e[0;35m\w\e[0;34m] \e[0m"

# postgresql
alias pgstart='sudo /etc/init.d/postgresql start'
alias pgstop='sudo /etc/init.d/postgresql stop'
alias pgst='sudo /etc/init.d/postgresql status'
alias createpg='createdb -U postgres -h localhost -T template_pgrouting'

# ruby
alias b='bundle'
alias be='bundle exec'
alias bet='bundle exec ruby -I test'
alias bi='bundle install'
alias bu='bundle update'

# rails
alias r='rails'
alias rs='rails server'
alias rc='rails console'
alias rst='RAILS_ENV=test rails server'
alias rg='rails generate'
alias rk='bundle exec rake'
alias migrate='bundle exec rake db:migrate'
alias rollback='bundle exec rake db:rollback'

# rvm
alias rvm-update='rvm get latest && rvm rubygems current'

# misc
alias mysql-cleanse='mysql -uroot -e "show databases" | grep -v Database | grep -v mysql | grep -v information_schema | gawk '"'"'{print "drop database `" $1 "`;select sleep(0.1);"}'"'"' | mysql -uroot'
alias mongo-cleanse='echo "show dbs" | mongo | grep stat_ngin_ | awk '"'"'{print $1}'"'"' | xargs -n1 mongo --eval "db.dropDatabase()"'
alias flushmc="echo \"flush_all\" | nc localhost 11211"
alias long_tail='tail -f -n 1000'

# tmux
alias t='tmux'
alias ta='tmux attach -t'
alias tk='tmux kill-session -t'
alias tk-all='tmux kill-server'
alias tn='tmux new -s'

# git
alias g='git'

# side by side diff
alias gside="git difftool -t opendiff"
# resolve merge conflicts with filemerge
alias gmergetool="git mergetool -t opendiff"

alias reload='source ~/.zshrc'
